---
import Gmail from "../icons/Gmail.astro";
import Github from "../icons/Github.astro";
import LinkedIn from "../icons/LinkedIn.astro";
---

<footer class="bg-white shadow dark:bg-gray-800">
    <div
        class="flex flex-col items-center md:flex-row w-full md:mx-16 max-w-screen-xl p-8 md:flex md:items-center md:justify-between"
    >
        <ul
            class="flex flex-col md:flex-row  flex-wrap gap-6 items-center mt-3 mr-32 text-sm font-medium text-gray-500 dark:text-gray-400 sm:mt-0"
        >
            <a
                href="#"
                class="bg-blue-100 gap-3 hover:bg-blue-200 text-blue-800 text-xs font-semibold me-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-blue-400 border border-blue-400 inline-flex items-center justify-center"
                >
                Github 
                <Github class="size-5"/> 
            </a>
            <a
                href="#"
                class="bg-blue-100 gap-3 hover:bg-blue-200 text-blue-800 text-xs font-semibold me-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-blue-400 border border-blue-400 inline-flex items-center justify-center"
                >
                Linkedin/gergati
                <LinkedIn class="size-5" /> 
            </a>
            <a
                href="#"
                class="bg-blue-100 gap-3 hover:bg-blue-200 text-blue-800 text-xs font-semibold me-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-blue-400 border border-blue-400 inline-flex items-center justify-center"
                >
                gergati1994@gmail.com
                <Gmail class="size-5" />
            </a>
        </ul>
        <span class="text-sm text-center  text-gray-500 sm:text-center dark:text-gray-400"
            >Hecho con <a
            target="_blank"
                href="https://astro.build/"
                class="hover:underline">Astro</a
            >
        </span>
    </div>
</footer>
